<h1>New User</h1>

<%= form_for [:admin, @user] do |f| %>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.label :admin %><br>
    <%= f.check_box :admin %>
  </div>

  <div>
    <%= f.submit "Create User" %>
  </div>
<% end %>

<%= link_to 'Back', admin_users_path %>
