<div class="flex flex-col mb-auto px-2 pt-5" id="main">
  <% @contracts.each do |contract| %>
    <div class="flex justify-between">
      <p><%= link_to "#{contract.CNTR}", contract_path(contract.CNTR), class: "text-green-600 hover:underline" %></p>
      <p><%= contract.customer.NAME %></p>
    </div>
  <% end %>
</div>
