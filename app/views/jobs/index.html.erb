<div class="flex flex-col mb-auto px-2 pt-5" id="main">
  <div id="filters">
  </div>
  <div id="cards">
    <% @jobs.each do |job| %>
      <div class="flex flex-col p-2 m-2 border-2 rounded-md">
        <div class="border-b-2">
          <p><%= job.item.KEY %> Store: <%= job.item.CurrentStore %></p>
        </div>
        <div class="flex flex-col">
          <p><%= job.item.Name %></p>
          <p><%= job.item.PartNumber %></p>
          <p>Returned Date: <%= job.item.LDATE %></p>
          <p>Job Completed: <%= job.completed_at %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
