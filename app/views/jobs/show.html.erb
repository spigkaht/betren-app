<div class="flex flex-col mb-auto px-2 pt-5" id="main">
  <div class="flex justify-between">
    <h1>Job <%= @job.id %></h1>
    <%= link_to "View Template", template_path(@job.template, job_id: @job.id), class: "text-blue-600 hover:underline" if current_user.admin? %>
  </div>
  <div class="flex justify-between">
    <p><%= @job.item.Name %></p>
    <p><%= @job.item.PartNumber %></p>
  </div>
  <div class="mt-5">
    <%= form_with model: @job, url: job_path(@job), method: :patch, local: true do |f| %>
      <% @job.template.questions.each_with_index do |question, index| %>
        <div class="flex justify-between">
          <p class="flex-1"><%= question.content %></p>
          <% if question.qtype == "bool" %>
            <%= f.check_box "bool#{index}", { class: "my-1" }, "true", "false" %>
          <% elsif question.qtype == "text" %>
            <%= f.text_field "text#{index}", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 my-1" %>
          <% elsif question.qtype == "num" %>
            <%= f.number_field "num#{index}", step: "any", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 my-1" %>
          <% end %>
        </div>
      <% end %>
      <%= f.hidden_field :id, value: @job.id %>
      <div class="flex justify-between mt-8 mx-8">
        <%= f.submit "Complete", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-2 focus:outline-none" %>
        <%= link_to "Back to Jobs", jobs_path, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-2 focus:outline-none" %>
      </div>
    <% end %>
  </div>

</div>
