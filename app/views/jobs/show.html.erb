<div class="flex flex-col mb-auto px-2 pt-5" id="main">
  <div class="flex justify-between">
    <h1>Job <%= @job.id %></h1>
    <%= link_to "View Template", template_path(@job.template, job_id: @job.id), class: "text-blue-600 hover:underline" if current_user.admin? %>
  </div>
  <div class="flex justify-between">
    <p><%= @job.item.Name %></p>
    <p><%= @job.item.PartNumber %></p>
  </div>
  <div class="mt-5">
    <%= form_with model: @job, url: job_path(@job), method: :patch, local: true do |f| %>
      <% @job.template.questions.each_with_index do |question, index| %>
        <div class="flex justify-between">
          <p><%= question.content %></p>
          <% if question.qtype == "bool" %>
            <%= f.check_box "answers_attributes[#{index}][value]", {}, "true", "false" %>
          <% elsif question.qtype == "text" %>
            <%= f.text_field "answers_attributes[#{index}][value]" %>
          <% elsif question.qtype == "num" %>
            <%= f.number_field "answers_attributes[#{index}][value]", step: "any" %>
          <% end %>
          <%= f.hidden_field "answers_attributes[#{index}][question_id]", value: question.id %>
        </div>
      <% end %>
      <%= f.submit "Complete", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>

    <h1><%= @job.last_contract %></h1>
    <p><%= @job.store %></p>
  </div>

  <%= link_to "Back to Jobs", jobs_path, class: "text-blue-600 hover:underline" %>
</div>
