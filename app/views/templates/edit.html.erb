<div class="flex flex-col mb-auto px-2 pt-5" id="main">
  <div class="flex justify-between">
    <h1><%= @template.header %></h1>
    <h2>Template Edit</h2>
  </div>
  <div class="flex-1">
    <% @template.questions.each do |question| %>
      <div class="flex justify-between mt-4">
        <p><%= question.content %></p>
        <% if question.qtype == "bool" %>
          <input type="checkbox" name="" />
        <% elsif question.qtype == "text" %>
          <input type="text" name="" />
        <% elsif question.qtype == "num" %>
          <input type="number" name="" />
        <% end %>
      </div>
      <div>
        <%# buttons to edit / delete questions.... %>
      </div>
    <% end %>
  </div>
  <div class="flex justify-between items-center mt-8">
    <%# change this button to a regulard button_to or link_to to create a new question.... %>
    <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-2 focus:outline-none">Add Question</button>
    <%= link_to "Update", template_path(@template), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-2 mx-2 focus:outline-none" %>
    <%= link_to "Back to Template", template_path(@template), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-2 focus:outline-none" %>
  </div>
</div>
