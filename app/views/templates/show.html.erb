<div class="flex flex-col mb-auto px-2 pt-5" id="main">
  <div class="flex justify-between">
    <h1><%= @template.header %></h1>
    <h2>Template View</h2>
  </div>
  <div class="flex-1">
    <% if @template.questions.any? %>
      <% @template.questions.each do |question| %>
        <div class="flex justify-between mt-4">
          <p><%= question.content %></p>
          <% if question.qtype == "bool" %>
            <input type="checkbox" name="" />
          <% elsif question.qtype == "text" %>
            <input type="text" name="" />
          <% elsif question.qtype == "num" %>
            <input type="number" name="" />
          <% end %>
        </div>
        <div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="flex justify-between items-center mt-8">
    <%= link_to "Edit Template", edit_template_path(@template), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-2 mx-2 focus:outline-none" %>
    <% if params[:job_id].present? %>
      <%= link_to "Back to Job", job_path(@job), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-2 focus:outline-none" %>
    <% else %>
      <%= link_to "Show All Jobs", jobs_path, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-xs px-4 py-2 focus:outline-none" %>
    <% end %>
  </div>
</div>
